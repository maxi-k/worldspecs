  {
    "description": "GDP Development by Country",
    "group": "Sample Queries with Plots",
    "sql_code": [
      "select gdp.time as year,",
      "       cty.name as country,",
      "       cty.world_4region as region,",
      "       cty.main_religion_2008 as main_religion,",
      "       gdp.total_gdp_us_inflation_adjusted/1e9 as gdp_billions,",
      "from datapoints_total_gdp_us_inflation_adjusted_by_geo_time gdp",
      "join entities_geo_country cty on cty.country = gdp.geo"
    ],
    "r_code": [
      "theme_set(theme_bw())",
      "",
      "### the current table is bound to the variable 'data'",
      "output <- ggplot(data, aes(x = year, y = gdp_billions, color = region, group = country)) +",
      "  geom_point() +",
      "  geom_line()",
      "",
      "plotly_json(output, pretty=FALSE)"
    ]
  },
  {
    "description": "Life Expectancy vs. GDP",
    "group": "Sample Queries with Plots",
    "sql_code": [
      "select gdp.time as year,",
      "       cty.name as country,",
      "       cty.world_4region as region,",
      "       cty.main_religion_2008 as main_religion,",
      "       gdp.gdppercapita_us_inflation_adjusted as gdp_per_capita,",
      "       le.life_expectancy_at_birth_data_from_ihme as life_expectancy",
      "from datapoints_gdppercapita_us_inflation_adjusted_by_geo_time gdp",
      "join datapoints_life_expectancy_at_birth_data_from_ihme_by_geo_time le on gdp.geo = le.geo and gdp.time = le.time",
      "join entities_geo_country cty on cty.country = gdp.geo"
    ],
    "r_code": [
      "theme_set(theme_bw())",
      "",
      "### the current table is bound to the variable 'data'",
      "output <- ggplot(data, aes(y = life_expectancy, x = gdp_per_capita, color = region, frame = year)) +",
      "  scale_x_log10() + ",
      "  geom_point(alpha = 0.7) + ",
      "  labs(x = 'Life Expectancy', y = 'GDP per Capita (log scale)')",
      "",
      "## output to the html page",
      "plotly_json(output, pretty=FALSE)"
    ]
  }
]
